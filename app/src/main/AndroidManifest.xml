<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.rahul.triviaapp">

    <application
        android:name=".framework.TriviaApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="in.rahul.triviaapp.presentation.activity.SummaryActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="in.rahul.triviaapp.presentation.activity.FlagActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="in.rahul.triviaapp.presentation.activity.SportsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="in.rahul.triviaapp.presentation.activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="in.rahul.triviaapp.presentation.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>